<table class="table table-bordered">
  <tr>
    <th colspan="4"><%= link_to "Add New", new_user_path %></th>
  </tr>
  
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
  </tr>
  
  <% @user.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
  </tr>
  <% end %>
</table>